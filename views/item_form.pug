extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name of item' name='name' required='true' value=(undefined===item ? '' : item.name) )
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='textarea', placeholder='Description' name='description' rows='3' required='true') #{undefined===item ? '' : item.description}
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='text', placeholder='Price: eg 56.55' name='price' value=(undefined===item ? '' : item.price) required='true') 
    div.form-group
      label(for='number_in_stock') Number in Stock:
      input#number_in_stock.form-control(type='text', placeholder='Number in stock: eg 12' name='number_in_stock' value=(undefined===item ? '' : item.number_in_stock) required='true') 
    div.form-group
      label Category:
      div(style='padding-right:10px;')
        for category in category_list
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='radio', name='category', id=category._id, value=category._id, checked=category.checked)
            label(for=category._id) #{category.name}
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg